<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" strict="true"
               name="XMLConfigTest" packages="org.apache.logging.log4j.test">
    <Filter type="ThresholdFilter" level="trace" />

    <Appenders>
        <Console name="STDOUT">
            <PatternLayout pattern="%m %n" />
        </Console>
        <RollingFile name="rollingFileServer"
                     fileName="src/main/resources/GB/server/logs/server.log"
                     filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval = "1" />
                <SizeBasedTriggeringPolicy
                        size="250 MB" />
            </Policies>
        </RollingFile>
        <RollingFile name="rollingFileClient"
                     fileName="src/main/resources/GB/client/logs/client.log"
                     filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval = "1" />
                <SizeBasedTriggeringPolicy
                        size="250 MB" />
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="STDOUT" />
        </Root>
        <Logger name="ServerLogger" level="INFO">
            <AppenderRef ref="rollingFileServer" />
        </Logger>
        <Logger name="ClientLogger" level="INFO">
            <AppenderRef ref="rollingFileClient" />
        </Logger>
    </Loggers>

</Configuration>